<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/navHostMain"
    tools:ignore="UnusedNavigation">
    <!-- là một fragment, nhưng nó đóng vai trò container cho các fragment con dựa theo graph cung cấp -->
    <!-- nav-host-fragment có nên single instance? -->
    <nav-host-fragment
        android:id="@+id/navHostMain"
        android:label="Main"
        app:graph="@navigation/main_graph"
        app:uiContainer="expand_container">
        <action
            android:id="@+id/toNavHostSetting"
            app:destination="@id/navHostSetting"
            app:enterAnim="@animator/slide_fragment_vertical_right_in"
            app:exitAnim="@animator/slide_fragment_vertical_left_out"
            app:popEnterAnim="@animator/slide_fragment_vertical_left_in"
            app:popExitAnim="@animator/slide_fragment_vertical_right_out"/>
    </nav-host-fragment>
    <nav-host-fragment
        android:id="@+id/navHostSetting"
        android:label="Setting"
        app:graph="@navigation/setting_graph"
        app:uiContainer="new_flow_container" />
</navigation>